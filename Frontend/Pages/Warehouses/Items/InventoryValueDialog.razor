@using softserve.projectlabs.Shared.DTOs
@using System.Globalization

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Inventory Report</MudText>
        <MudText>
            <b>Warehouse:</b> @Warehouse.Name<br />
            <b>Location:</b> @Warehouse.Location<br />
            <b>Total Value:</b> @Value.ToString("C", CultureInfo.CurrentCulture)
        </MudText>
        <MudPaper Class="pa-2 mt-2" Style="white-space: pre-wrap;">
            @Report
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="MudDialog.Cancel">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public WarehouseResponseDto Warehouse { get; set; }
    [Parameter] public string Report { get; set; } = string.Empty;
    [Parameter] public decimal Value { get; set; }
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; }
}
