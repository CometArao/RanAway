@page "/home"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
    <MudGrid Spacing="3">
        <!-- KPI Cards -->
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Customers</MudText>
                <MudText Typo="Typo.h4" Color="Color.Primary">123</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Inventory</MudText>
                <MudText Typo="Typo.h4" Color="Color.Secondary">456</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Shipments</MudText>
                <MudText Typo="Typo.h4" Color="Color.Info">7</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Branches</MudText>
                <MudText Typo="Typo.h4" Color="Color.Success">4</MudText>
            </MudPaper>
        </MudItem>

        <!-- Recent Activity / Notifications -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Recent Activity</MudText>
                <MudList T="string">
                    <MudListItem T="string">Shipment #123 created</MudListItem>
                    <MudListItem T="string">Customer "Acme" added</MudListItem>
                    <MudListItem T="string">Inventory updated</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <!-- Quick Actions -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Quick Actions</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="me-2">Add Item</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="me-2">Create Shipment</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Info">Add Customer</MudButton>
            </MudPaper>
        </MudItem>

        <!-- Data Visualization Placeholder -->
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-4">
                <MudText Typo="Typo.h6">Inventory Trends</MudText>
                <div style="height:200px; background:#f5f5f5; display:flex; align-items:center; justify-content:center;">
                    [Chart Placeholder]
                </div>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
